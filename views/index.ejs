<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Tweets</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #F6F6F6;
      }

      header {
        background-color: #1DA1F2;
        color: white;
        padding: 10px;
        text-align: center;
      }

      h1 {
        margin: 0;
      }

      ul {
        list-style: none;
        margin: 0;
        padding: 0;
      }

      li {
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
      }

      li:nth-child(odd) {
        background-color: white;
      }

      li:nth-child(even) {
        background-color: #F6F6F6;
      }

      .meta {
        font-size: 0.8em;
        color: #808080;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>Tweets</h1>
    </header>
    <main>
      <ul>
        <% tweets.forEach(function(tweet) { %>
          <li>
            <%= tweet.text %>
            <div class="meta">
              <span class="username">@<%= tweet.username %></span>
              <span class="time"><%= tweet.time %></span>
            </div>
          </li>
        <% }); %>
      </ul>
    </main>
  </body>
</html>
